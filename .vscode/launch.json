    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "tox_core.py",
            "console": "integratedTerminal",
            "args": ["prog"]
        },
        {
            "name": "Python: Host Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5690
            },
        },
        {
            "name": "Container Attach 5690",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5690
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        },
        {
            "name": "Container Attach 5580",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5580
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        }
    ]
}
